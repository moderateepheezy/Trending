<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#efeeee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/event_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    tools:text="@string/placeholder_lorem_ipsum"
                    android:textSize="14sp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/reaction_bar"
                    android:singleLine="true"
                    style="@style/TextViewCustomFont"
                    android:layout_margin="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/rlv_name_view"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/free" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/reaction_bar"
                            android:text="GENERAL"/>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="220dp"
                        android:layout_marginStart="7dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:id="@+id/sourceImg"
                                android:src="@drawable/eventbrite"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:text="LindaIkeji"
                                android:id="@+id/sourceName"
                                style="@style/TextViewCustomFont"
                                android:textColor="@color/reaction_bar"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/event_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/placeholder_lorem_ipsum"
                            android:textSize="16sp"
                            android:maxLength="30"
                            style="@style/TextViewCustomFont"
                            android:textColor="@color/reaction_bar"
                            />

                        <TextView
                            android:id="@+id/event_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/placeholder_lorem_ipsum"
                            android:textSize="14sp"
                            android:textColor="#606161"
                            style="@style/TextViewCustomFont"
                            android:maxLength="50"
                            />


                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/reaction_bar"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/reaction_bar" >
                        <Button
                            android:id="@+id/share"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@drawable/button_press"
                            android:text="SHARE"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:padding="5dp"
                            android:drawablePadding="5dp"
                            style="@style/TextViewCustomFont"
                            android:textColor="@color/white"
                            android:drawableRight="@drawable/rsz_share_icon"
                            android:gravity="center|center_vertical" />

                    </FrameLayout>


                </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>