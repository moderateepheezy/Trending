<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:background="#efeeee"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="2dp"
        app:contentPadding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Texting"
                    android:textAppearance="@style/Text.Subhead"
                    android:textStyle="bold"
                    android:textColor="@color/PrimaryColor"
                    android:id="@+id/tweet_name"/>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:textColor="#434343"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/last_tweet"
                android:text="@string/placeholder_lorem_ipsum_long"
                android:maxLength="90"
                android:padding="8dp"
                android:textAppearance="@style/Text.Subhead"
                android:textColor="#292929"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="12sp"
                android:textAppearance="@style/Text.Subhead"
                android:textColor="@color/twitter_color"
                android:id="@+id/tweet_volume"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/twitter_icon"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#5fabdf"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#5fabdf" >
                    <Button
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="@drawable/button_press_twitter"
                        android:text="SHARE"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        style="@style/TextViewCustomFont"
                        android:textColor="@color/white"
                        android:drawableRight="@drawable/rsz_share_icon"
                        android:gravity="center|center_vertical" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>